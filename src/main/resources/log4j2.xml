<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false"
                           pattern="[%d{HH:mm:ss}] %highlight{%-5level}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=green} %style{%logger{36}.%M() @%L}{cyan} : %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>